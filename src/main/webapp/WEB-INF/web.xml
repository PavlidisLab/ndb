	<!-- web fonts -->
	<mime-mapping>
		<extension>eot</extension>
		<mime-type>application/vnd.ms-fonobject</mime-type>
	</mime-mapping>
		<mime-mapping>
		<extension>otf</extension>
		<mime-type>font/opentype</mime-type>
